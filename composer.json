{
    "name": "innovative/laravel",
    "description": "Core compatible Laravel project for Laravel 5.1",
    "license": "private",
    "type": "project",
    "repositories": [
        {
            "type": "composer",
            "url": "http://packages.imdadmin.com"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.1.*",
        "innovative/core": "~2.0",
        "doctrine/dbal": "*",
        "msurguy/honeypot": "~0.2",
        "predis/predis": "~1.0"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1",
        "behat/behat": "~3.0",
        "behat/mink": "*",
        "behat/mink-extension": "*",
        "behat/mink-goutte-driver": "*",
        "behat/mink-selenium2-driver": "*",
        "barryvdh/laravel-debugbar": "2.*"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "git init",
            "git remote add Innovative/Laravel git@github.com:innovativemedia/laravel.git",
            "php -r \"copy('.env.example', '.env');\"",
            "chmod 777 storage/* -R",
            "chmod 777 bootstrap/cache -R",
            "mkdir uploads && chmod 777 uploads -R",
            "pre-commit install",
            "php artisan key:generate",
            "App\\Console\\Commands\\Setup::postCreateProject",
            "php artisan migrate --path=vendor/innovative/core/database/migrations/",
            "php artisan db:seed --class=InnovativeCoreSeeder",
            "php artisan vendor:publish --tag=public --force",
            "php artisan clear-compiled",
            "php artisan optimize",
            "git add -A && git commit -m \"Initial Commit\" --no-verify",
            "npm install",
            "bower install"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
